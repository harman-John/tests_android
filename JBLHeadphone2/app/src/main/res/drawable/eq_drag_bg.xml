<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- shader -->
    <item
        android:left="6dp"
        android:top="6dp">
        <shape android:shape="rectangle" >

            <corners android:topLeftRadius="100dp"
                android:topRightRadius="100dp"
                android:bottomRightRadius="100dp"
                android:bottomLeftRadius="100dp"/>
            <gradient
                android:angle="270"
                android:endColor="#9298A2"
                android:startColor="#9298A2" />

        </shape>
    </item>

    <!--background -->
    <item
        android:left="8dp"
        android:top="0dp"
        android:right="4dp"
        android:bottom="4dp">
        <shape android:shape="rectangle" >

            <corners android:topLeftRadius="100dp"
                android:topRightRadius="100dp"
                android:bottomRightRadius="100dp"
                android:bottomLeftRadius="100dp"/>
            <gradient
                android:endColor="#FF6B00"
                android:startColor="#FF3301" />

        </shape>
    </item>
</layer-list>