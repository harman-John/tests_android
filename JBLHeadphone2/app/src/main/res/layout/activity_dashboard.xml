<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_gradient_discovery">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/shape_gradient_discovery"
        android:clickable="true"
        android:clipChildren="false"
        android:focusable="true"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relative_layout_dashboard_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar_height"
            android:background="@color/red_discovery">

            <jbl.stc.com.view.AppImageView
                android:id="@+id/image_view_dashboard_white_menu"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="@dimen/marginTop10dp"
                android:contentDescription="TODO"
                android:src="@mipmap/app_menu" />

            <jbl.stc.com.view.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/my_products"
                android:textStyle="normal"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <jbl.stc.com.view.AppImageView
                android:id="@+id/image_view_dashboard_white_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:background="@mipmap/white_plus" />

        </RelativeLayout>

        <jbl.stc.com.view.CustomFontTextView
            android:id="@+id/text_view_dashboard_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="148dp"
            android:text="@string/my_products_tips"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold" />

        <jbl.stc.com.view.MyDragGridView
            android:id="@+id/grid_view_dashboard"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/relative_layout_dashboard_title"
            android:background="@android:color/transparent"
            android:cacheColorHint="@android:color/transparent"
            android:listSelector="@android:color/transparent"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:numColumns="1"
            app:drag_last_position="true"
            app:drag_scale="1.05"
            app:drag_start_position="0"
            app:scale_mill="200"
            app:vibrator="true" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/containerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <jbl.stc.com.view.DeleteView
        android:id="@+id/delete_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="-75dp"
        android:layout_marginRight="-75dp"
        android:visibility="gone" />
</RelativeLayout>
