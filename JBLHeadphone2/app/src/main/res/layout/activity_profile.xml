<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@mipmap/black_gradient"
    android:orientation="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:picker="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.harman.soundx.ui.profile.ProfileActivity">

        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/profile_margin10dp">


            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/left" />

            <ImageView
                android:id="@+id/action_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal"
                android:src="@mipmap/sound_x_small_edition" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_title_pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar"
            android:layout_marginTop="@dimen/profile_gender_title_margin_top"
            android:gravity="center_horizontal"
            android:text="@string/pt_title_text"
            android:textColor="@color/white"
            android:textSize="@dimen/profile_text_size" />

        <android.support.v7.widget.CardView
            android:id="@+id/gender_card"
            android:layout_width="@dimen/width"
            android:layout_height="@dimen/height"
            android:layout_below="@id/tv_title_pt"
            android:layout_marginLeft="@dimen/profile_card_margin_right_left"
            android:layout_marginRight="@dimen/profile_card_margin_right_left"
            android:layout_marginTop="@dimen/profile_gender_card_margin_top"
            app:cardBackgroundColor="@color/card_color"
            app:cardCornerRadius="@dimen/profile_margin30dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_gendertext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/profile_gender_title_margin_top"
                    android:gravity="center_horizontal"
                    android:text="@string/gender_txt"
                    android:textColor="@color/white"
                    android:textSize="@dimen/profile_text_size" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_gendertext"
                    android:layout_marginTop="@dimen/profile_gender_item_margin_top"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/female"
                        android:layout_width="76dp"
                        android:layout_height="76dp"
                        app:srcCompat="@mipmap/girl_active" />

                    <ImageView
                        android:id="@+id/male"
                        android:layout_width="76dp"
                        android:layout_height="76dp"
                        android:layout_marginStart="@dimen/profile_gender_item_margin_start"
                        app:srcCompat="@mipmap/boy_inactivate" />

                    <ImageView
                        android:id="@+id/others"
                        android:layout_width="76dp"
                        android:layout_height="76dp"
                        android:layout_marginStart="@dimen/profile_gender_item_margin_start"
                        android:src="@mipmap/no_answer_inactivate" />
                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/dob_card"
            android:layout_width="@dimen/width"
            android:layout_height="@dimen/height"
            android:layout_below="@id/gender_card"
            android:layout_marginLeft="@dimen/profile_card_margin_right_left"
            android:layout_marginRight="@dimen/profile_card_margin_right_left"
            android:layout_marginTop="@dimen/help_close_margin_top"
            app:cardBackgroundColor="@color/card_color"
            app:cardCornerRadius="@dimen/corner_radius">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_yobtext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/profile_gender_title_margin_top"
                    android:gravity="center"
                    android:text="@string/yob_text"
                    android:textColor="@color/white"
                    android:textSize="@dimen/profile_text_size" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_yobtext"
                    android:layout_marginTop="@dimen/profile_gender_item_margin_top">

                    <com.wefika.horizontalpicker.HorizontalPicker
                        android:id="@+id/hpick"
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:background="@drawable/back2"
                        android:ellipsize="marquee"
                        android:marqueeRepeatLimit="-1"
                        android:textColor="@color/text_color_1"
                        android:textSize="@dimen/yob_text_size"
                        picker:dividerSize="@dimen/itemPadding"
                        picker:sideItems="@integer/sideItems"
                        picker:values="@array/years_range" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:src="@mipmap/triangle" />
                </FrameLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/experience_card"
            android:layout_width="@dimen/width"
            android:layout_height="@dimen/height"
            android:layout_below="@id/dob_card"
            android:layout_marginLeft="@dimen/profile_card_margin_right_left"
            android:layout_marginRight="@dimen/profile_card_margin_right_left"
            android:layout_marginTop="@dimen/help_close_margin_top"
            app:cardBackgroundColor="@color/card_color"
            app:cardCornerRadius="@dimen/corner_radius">

            <RelativeLayout
                android:id="@+id/experinece_title_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_lsnexptext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lsnexp_text"
                        android:textColor="@color/white"
                        android:layout_marginTop="@dimen/profile_gender_title_margin_top"
                        android:textSize="@dimen/profile_text_size" />

                    <ImageView
                        android:id="@+id/help_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:src="@mipmap/question_mark" />

                </LinearLayout>

                <com.warkiz.widget.IndicatorSeekBar
                    android:id="@+id/bubble"
                    android:layout_width="@dimen/profile_bubble_width_size"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/profile_seeker_margin_top"
                    app:isb_seek_smoothly="true"
                    app:isb_show_tick_marks_type="oval"
                    app:isb_show_tick_texts="true"
                    app:isb_tick_marks_color="@color/silver"
                    app:isb_tick_marks_size="15dp"
                    app:isb_tick_texts_array="@array/listening_exp"
                    app:isb_tick_texts_color="@color/silver"
                    android:layout_centerHorizontal="true"
                    app:isb_ticks_count="4" />
            </RelativeLayout>


        </android.support.v7.widget.CardView>


        <RelativeLayout
            android:id="@+id/next_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/experience_card"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/profile_next_margin_top"
            android:background="@mipmap/orange"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingBottom="@dimen/profile_paddin18dp"
                android:text="@string/next"
                android:textColor="@color/white"
                android:textSize="@dimen/profile_next_text_size"
                android:textStyle="bold" />


        </RelativeLayout>
    </RelativeLayout>
</ScrollView>

