<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/containerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_dashboard_gradient"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:paddingLeft="@dimen/page_padding_right"
        android:paddingRight="@dimen/page_padding_right">

        <jbl.stc.com.view.AppImageView
            android:id="@+id/image_view_info"
            android:layout_width="@dimen/image_button_width_and_height"
            android:layout_height="@dimen/image_button_width_and_height"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_setting_normal" />

        <ImageView
            android:id="@+id/image_view_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_settings" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/eqInfoLayout"
        android:layout_below="@+id/titleBar"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:text="@string/deviceName"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp"
            android:layout_weight="10"
            android:background="@drawable/shape_dashboard_device_circle"
            android:clickable="false">

            <ImageView
                android:id="@+id/deviceImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:clickable="false"
                android:scaleType="fitCenter"
                android:src="@mipmap/device_049" />
        </RelativeLayout>

        <include
            layout="@layout/layout_battery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="90dp"
            android:baselineAligned="false"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <jbl.stc.com.view.AppImageView
                    android:id="@+id/image_view_noise_cancel"
                    android:layout_width="@dimen/dashboard_talk_image_width"
                    android:layout_height="@dimen/dashboard_talk_image_width"
                    android:scaleType="fitXY"
                    android:src="@mipmap/icon_talk_through_on" />

                <jbl.stc.com.view.PoppinsRegularTextView
                    style="@style/PoppinsRegularTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:gravity="center_horizontal"
                    android:lineSpacingExtra="-5dp"
                    android:text="@string/text_noise_canceling"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/eqSwitchLayout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="visible">

                <jbl.stc.com.view.AppImageView
                    android:id="@+id/image_view_ambient_aware"
                    android:layout_width="@dimen/dashboard_talk_image_width"
                    android:layout_height="@dimen/dashboard_talk_image_width"
                    android:scaleType="fitXY"
                    android:src="@mipmap/icon_eq_on" />

                <jbl.stc.com.view.PoppinsRegularTextView
                    android:id="@+id/text_view_ambient_aware"
                    style="@style/PoppinsRegularTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:gravity="center_horizontal"
                    android:text="@string/text_ambient_aware"
                    android:textColor="@android:color/black" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/eqInfoLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray_theme"
            android:paddingLeft="@dimen/page_padding_left"
            android:paddingRight="@dimen/page_padding_right">

            <jbl.stc.com.view.PoppinsRegularTextView
                android:id="@+id/titleEqText"
                style="@style/PoppinsRegularTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/title_eq"
                android:textColor="@color/white" />

            <View
                android:id="@+id/eqDividerView"
                android:layout_width="@dimen/divider_size"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_toRightOf="@+id/titleEqText"
                android:background="@color/white" />

            <jbl.stc.com.view.PoppinsRegularTextView
                android:id="@+id/eqNameText"
                style="@style/PoppinsRegularTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/image_button_width_and_height"
                android:layout_toRightOf="@+id/eqDividerView"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="Bass"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/arrowUpImage"
                android:layout_width="@dimen/image_button_width_and_height"
                android:layout_height="@dimen/image_button_width_and_height"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_arrow_up" />
        </RelativeLayout>
    </FrameLayout>

</RelativeLayout>