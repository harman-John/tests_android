<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/lighter_gray_theme"
    android:keepScreenOn="true"
    android:splitMotionEvents="false"
    android:windowEnableSplitTouch="false">

    <RelativeLayout
        android:id="@+id/relative_layout_ota_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:layout_alignParentTop="true"
        android:paddingLeft="@dimen/margin_top_10dp"
        android:paddingRight="@dimen/margin_top_10dp">

        <jbl.stc.com.view.AppImageView
            android:id="@+id/image_view_ota_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/grey_arrow_back"
            android:visibility="visible" />

        <jbl.stc.com.view.CustomFontTextView
            android:id="@+id/text_ota_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/text_ota_title"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="normal" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/startupdating"
        android:layout_below="@id/relative_layout_ota_title"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:gravity="start|bottom"
        android:orientation="vertical">

        <jbl.stc.com.view.CustomFontTextView
            android:id="@+id/updateStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="6dp"
            android:text="@string/firmware_is_updating"
            android:textSize="16sp"
            android:textStyle="normal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/startupdating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:weightSum="1">

        <FrameLayout
            android:id="@+id/mainCircle"
            android:layout_width="146dp"
            android:layout_height="146dp"
            android:background="@color/lighter_gray_theme">

            <jbl.stc.com.view.CustomFontTextView
                android:id="@+id/text_view_ota_circle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/update_circle"
                android:textStyle="normal" />

            <jbl.stc.com.view.CustomFontTextView
                android:id="@+id/text_progress"
                style="@android:style/TextAppearance.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:text="0 %"
                android:textColor="@android:color/black"
                android:textSize="22sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <!--<ImageView-->
            <!--android:id="@+id/iv_ok"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center"-->
            <!--android:gravity="center_horizontal"-->
            <!--android:src="@mipmap/grey_ok"-->
            <!--android:visibility="gone" />-->
        </FrameLayout>
    </LinearLayout>

    <jbl.stc.com.view.ShadowLayout
        android:id="@+id/shadowLayout"
        android:layout_width="@dimen/shadow_button_width"
        android:layout_height="@dimen/shadow_button_height"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="15dp">

        <jbl.stc.com.view.AppButton
            android:id="@+id/button_done"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:gravity="center"
            android:background="@drawable/rectangle_with_round_corner_left_red_right_orange"
            android:text="@string/done"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

    </jbl.stc.com.view.ShadowLayout>

</RelativeLayout>
