<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/gray_dee2e6"
    android:clickable="true"
    android:focusable="true">

    <RelativeLayout
        android:id="@+id/relative_layout_product_help_title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:paddingLeft="@dimen/margin_top_10dp"
        android:paddingRight="@dimen/margin_top_10dp">

        <jbl.stc.com.view.AppImageView
            android:id="@+id/image_view_product_help_back"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/black_arrow_back"
            android:visibility="visible" />

        <jbl.stc.com.view.CustomFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/text_product_help"
            android:textColor="@color/title_text_color"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relative_layout_product_help_title_bar"
        android:layout_marginTop="15dp"
        android:fadingEdge="vertical"
        android:orientation="vertical"
        android:scrollbars="vertical">

        <RelativeLayout
            android:id="@+id/relative_layout_product_help_item_one"
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_item_height">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:background="@android:color/white" />

            <jbl.stc.com.view.CustomFontTextView
                android:id="@+id/text_view_product_help_item_one"
                android:layout_width="match_parent"
                android:layout_height="@dimen/settings_item_height"
                android:drawableEnd="@mipmap/settings_arrow"
                android:gravity="start|center_vertical"
                android:paddingEnd="@dimen/settings_item_padding_right"
                android:paddingStart="@dimen/settings_item_padding_right"
                android:text="@string/online_user_manual"
                android:drawableStart="@mipmap/pdf"
                android:textSize="16sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:background="@android:color/white" />
    </LinearLayout>

</RelativeLayout>