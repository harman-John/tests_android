<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/gray_dee2e6"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fadingEdge="vertical"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar_height"
            android:orientation="vertical"
            android:paddingLeft="@dimen/margin_top_10dp"
            android:paddingRight="@dimen/margin_top_10dp">

            <RelativeLayout
                android:id="@+id/titleBar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_bar_height"
                android:paddingLeft="@dimen/margin_top_10dp">

                <jbl.stc.com.view.AppImageView
                    android:id="@+id/image_view_close_in_pl"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="TODO"
                    android:src="@mipmap/delete_speaker_icon" />

            </RelativeLayout>

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingTop="50dp"
                android:shrinkColumns="1">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <jbl.stc.com.view.CustomFontTextView
                            android:id="@+id/text_view_product_tips_zero"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="30dp"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="20dp"
                            android:textColor="@color/black_4C596B"
                            android:text="@string/my_products_tips_zero"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <jbl.stc.com.view.CustomFontTextView
                            android:id="@+id/text_view_product_tips_one"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="30dp"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="24dp"
                            android:textColor="@color/black_4C596B"
                            android:text="@string/my_products_tips_one"
                            android:textSize="16sp"
                            android:textStyle="normal"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/text_view_product_list_zero" />

                        <jbl.stc.com.view.CustomFontTextView
                            android:id="@+id/text_view_product_tips_how_to_pair"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="30dp"
                            android:layout_marginStart="30dp"
                            android:textColor="@color/black_4C596B"
                            android:text="@string/my_products_tips_how_to_pair"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/text_view_product_list_zero" />

                        <jbl.stc.com.view.CustomFontTextView
                            android:id="@+id/my_products_tips_two"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="30dp"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="15dp"
                            android:textColor="@color/black_4C596B"
                            android:text="@string/my_products_tips_two"
                            android:textSize="16sp"
                            android:textStyle="normal"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/text_view_product_list_tips_two" />

                        <jbl.stc.com.view.CustomFontTextView
                            android:id="@+id/text_view_product_tips_check"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="50dp"
                            android:layout_marginEnd="30dp"
                            android:layout_marginStart="30dp"
                            android:textColor="@color/black_4C596B"
                            android:text="@string/my_products_tips_check"
                            android:textSize="16sp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </TableRow>

                <TableRow>

                    <LinearLayout
                        android:layout_weight="1"
                        android:baselineAligned="false">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical">

                                <jbl.stc.com.view.CustomFontTextView
                                    android:id="@+id/text_view_pro_device_1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/live_400bt"
                                    android:textColor="@color/black_4C596B"
                                    android:textSize="@dimen/font_14sp"
                                    android:textStyle="bold" />

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="20dp"
                                    android:layout_marginEnd="@dimen/product_list_margin"
                                    android:layout_marginStart="@dimen/product_list_margin">

                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="3dp"
                                        android:background="@drawable/shape_product_circle">

                                        <jbl.stc.com.view.AppImageView
                                            android:id="@+id/image_view_400_in_pl"
                                            android:layout_width="123dp"
                                            android:layout_height="122dp"
                                            android:src="@mipmap/live_400_bt_icon" />
                                    </RelativeLayout>
                                </RelativeLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical">

                                <jbl.stc.com.view.CustomFontTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/live_500bt"
                                    android:textColor="@color/black_4C596B"
                                    android:textSize="@dimen/font_14sp"
                                    android:textStyle="bold" />

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="20dp"
                                    android:layout_marginEnd="@dimen/product_list_margin"
                                    android:layout_marginStart="@dimen/product_list_margin">

                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="3dp"
                                        android:background="@drawable/shape_product_circle">

                                        <jbl.stc.com.view.AppImageView
                                            android:id="@+id/image_view_500_in_pl"
                                            android:layout_width="123dp"
                                            android:layout_height="122dp"
                                            android:src="@mipmap/live_500_bt_icon" />
                                    </RelativeLayout>
                                </RelativeLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </TableRow>

                <TableRow>

                    <LinearLayout android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical">

                                <jbl.stc.com.view.CustomFontTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/live_650bt_nc"
                                    android:textColor="@color/black_4C596B"
                                    android:textSize="@dimen/font_14sp"
                                    android:textStyle="bold" />

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="20dp"
                                    android:layout_marginEnd="@dimen/product_list_margin"
                                    android:layout_marginStart="@dimen/product_list_margin">

                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="3dp"
                                        android:background="@drawable/shape_product_circle">

                                        <jbl.stc.com.view.AppImageView
                                            android:id="@+id/image_view_650_in_pl"
                                            android:layout_width="123dp"
                                            android:layout_height="122dp"
                                            android:src="@mipmap/live_650_btnc_icon" />
                                    </RelativeLayout>
                                </RelativeLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical">

                                <jbl.stc.com.view.CustomFontTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:singleLine="true"
                                    android:text="@string/everest_elite_100"
                                    android:textColor="@color/black_4C596B"
                                    android:textSize="@dimen/font_14sp"
                                    android:textStyle="bold" />

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="20dp"
                                    android:layout_marginEnd="@dimen/product_list_margin"
                                    android:layout_marginStart="@dimen/product_list_margin">

                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="3dp"
                                        android:background="@drawable/shape_product_circle">

                                        <jbl.stc.com.view.AppImageView
                                            android:id="@+id/image_view_100_in_pl"
                                            android:layout_width="123dp"
                                            android:layout_height="122dp"
                                            android:src="@mipmap/everest_elite_100_icon" />
                                    </RelativeLayout>
                                </RelativeLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </TableRow>

                <TableRow>

                    <LinearLayout
                        android:layout_weight="1"
                        android:baselineAligned="false">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical">

                                <jbl.stc.com.view.CustomFontTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/everest_elite_150nc"
                                    android:textColor="@color/black_4C596B"
                                    android:textSize="@dimen/font_14sp"
                                    android:textStyle="bold" />

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="20dp"
                                    android:layout_marginEnd="@dimen/product_list_margin"
                                    android:layout_marginStart="@dimen/product_list_margin">

                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="3dp"
                                        android:background="@drawable/shape_product_circle">

                                        <jbl.stc.com.view.AppImageView
                                            android:id="@+id/image_view_150_in_pl"
                                            android:layout_width="123dp"
                                            android:layout_height="122dp"
                                            android:src="@mipmap/everest_elite_150nc_icon" />
                                    </RelativeLayout>
                                </RelativeLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical">

                                <jbl.stc.com.view.CustomFontTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:singleLine="true"
                                    android:text="@string/everest_elite_300"
                                    android:textColor="@color/black_4C596B"
                                    android:textSize="@dimen/font_14sp"
                                    android:textStyle="bold" />

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="20dp"
                                    android:layout_marginEnd="@dimen/product_list_margin"
                                    android:layout_marginStart="@dimen/product_list_margin">

                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="3dp"
                                        android:background="@drawable/shape_product_circle">

                                        <jbl.stc.com.view.AppImageView
                                            android:id="@+id/image_view_300_in_pl"
                                            android:layout_width="123dp"
                                            android:layout_height="122dp"
                                            android:src="@mipmap/everest_elite_300_icon" />
                                    </RelativeLayout>
                                </RelativeLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </TableRow>

                <TableRow>

                    <LinearLayout
                        android:layout_weight="1"
                        android:baselineAligned="false">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical">

                                <jbl.stc.com.view.CustomFontTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/everest_elite_700"
                                    android:textColor="@color/black_4C596B"
                                    android:textSize="@dimen/font_14sp"
                                    android:textStyle="bold" />

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="20dp"
                                    android:layout_marginEnd="@dimen/product_list_margin"
                                    android:layout_marginStart="@dimen/product_list_margin">

                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="3dp"
                                        android:background="@drawable/shape_product_circle">

                                        <jbl.stc.com.view.AppImageView
                                            android:id="@+id/image_view_700_in_pl"
                                            android:layout_width="123dp"
                                            android:layout_height="122dp"
                                            android:src="@mipmap/everest_elite_700_icon" />
                                    </RelativeLayout>
                                </RelativeLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical">

                                <jbl.stc.com.view.CustomFontTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/everest_elite_750nc"
                                    android:textColor="@color/black_4C596B"
                                    android:textSize="@dimen/font_14sp"
                                    android:textStyle="bold" />

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="20dp"
                                    android:layout_marginEnd="@dimen/product_list_margin"
                                    android:layout_marginStart="@dimen/product_list_margin">

                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="3dp"
                                        android:background="@drawable/shape_product_circle">

                                        <jbl.stc.com.view.AppImageView
                                            android:id="@+id/image_view_750_in_pl"
                                            android:layout_width="123dp"
                                            android:layout_height="122dp"
                                            android:src="@mipmap/everest_elite_750nc_icon" />
                                    </RelativeLayout>
                                </RelativeLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </TableRow>

                <TableRow>

                    <LinearLayout
                        android:layout_weight="1"
                        android:baselineAligned="false">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical">

                                <jbl.stc.com.view.CustomFontTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/reflect_aware"
                                    android:textColor="@color/black_4C596B"
                                    android:textSize="@dimen/font_14sp"
                                    android:textStyle="bold" />

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="20dp"
                                    android:layout_marginEnd="@dimen/product_list_margin"
                                    android:layout_marginStart="@dimen/product_list_margin">

                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="3dp"
                                        android:background="@drawable/shape_product_circle">

                                        <jbl.stc.com.view.AppImageView
                                            android:id="@+id/image_view_reflect_in_pl"
                                            android:layout_width="123dp"
                                            android:layout_height="122dp"
                                            android:src="@mipmap/reflect_aware_icon" />
                                    </RelativeLayout>
                                </RelativeLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:visibility="invisible">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical">

                                <jbl.stc.com.view.CustomFontTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/everest_elite_100"
                                    android:textColor="@color/black_4C596B"
                                    android:textSize="@dimen/font_14sp"
                                    android:textStyle="bold" />

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="20dp"
                                    android:layout_marginEnd="@dimen/product_list_margin"
                                    android:layout_marginStart="@dimen/product_list_margin">

                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="3dp"
                                        android:background="@drawable/shape_product_circle">

                                        <jbl.stc.com.view.AppImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content" />
                                    </RelativeLayout>
                                </RelativeLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </TableRow>

                <TableRow android:gravity="center">

                    <jbl.stc.com.view.CustomFontTextView
                        android:id="@+id/text_view_product_list_tips_end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="30dp"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/black_4C596B"
                        android:paddingEnd="30dp"
                        android:paddingStart="30dp"
                        android:text="@string/All_product_lists"
                        android:textSize="@dimen/font_14sp"
                        android:textStyle="normal"/>
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>