<!--<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"--><!--android:layout_width="fill_parent"--><!--android:layout_height="fill_parent"--><!--android:fillViewport="true"--><!--android:background="@android:color/white">-->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:clickable="true"
    android:background="@color/lighter_gray_theme"
    android:focusable="true">

    <ImageView
        android:id="@+id/image_view_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:padding="10dp"
        android:rotation="180"
        android:src="@mipmap/ic_back"
        android:visibility="visible" />

    <TextView
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_settings"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/deviceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/settings"
        android:layout_centerHorizontal="true"
        android:text="@string/deviceName"
        android:layout_marginLeft="7dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <ImageView
        android:id="@+id/deviceImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/deviceName"
        android:background="@mipmap/device_049"
        android:layout_centerHorizontal="true"
        android:text="@string/text_settings"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/deviceImage"
        android:layout_marginTop="15dp"
        android:layout_above="@+id/linearLayoutVersion"
        android:fadingEdge="vertical"
        android:scrollbars="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:background="@android:color/white"/>
            <TextView
                android:id="@+id/text_smartButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/settings_item_height"
                android:gravity="start|center_vertical"
                android:drawableRight="@mipmap/settings_arrow"
                android:paddingLeft="@dimen/settings_item_padding_left"
                android:paddingRight="@dimen/settings_item_padding_right"
                android:text="@string/text_smart_button"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textSize="18sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:background="@android:color/white"/>

            <LinearLayout
                android:id="@+id/auto_feature_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/settings_item_height"
                android:layout_below="@+id/text_smartButton"
                android:weightSum="1">

                <TextView
                    android:id="@+id/text_autoOff"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.95"
                    android:paddingLeft="@dimen/settings_item_padding_left"
                    android:paddingTop="12dp"
                    android:text="@string/text_auto_off_feature"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textSize="@dimen/abc_text_size_medium_material" />
                <Switch
                    android:id="@+id/toggleautoOff"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="6dp"
                    android:paddingRight="@dimen/settings_item_padding_right"
                    android:layout_weight="0.05"
                    android:switchMinWidth="0dp"
                    android:text=""
                    android:textOff=""
                    android:textOn=""
                    android:thumb="@drawable/toggle_switch_thumb"
                    android:track="@drawable/toggle_switch_track" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:background="@android:color/white"/>
            <LinearLayout
                android:id="@+id/voice_prompt_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/settings_item_height"
                android:layout_below="@+id/auto_feature_layout"
                android:layout_marginTop="1dp"
                android:weightSum="1">

                <TextView
                    android:id="@+id/text_voicePrompt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/auto_feature_layout"
                    android:gravity="center_vertical"
                    android:layout_weight="0.95"
                    android:paddingLeft="@dimen/settings_item_padding_left"
                    android:text="@string/text_voice_prompt"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textSize="@dimen/abc_text_size_medium_material" />

                <Switch
                    android:id="@+id/toggleVoicePrompt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="6dp"
                    android:paddingRight="@dimen/settings_item_padding_right"
                    android:layout_weight="0.05"
                    android:saveEnabled="true"
                    android:switchMinWidth="0dp"
                    android:text=""
                    android:textOff=""
                    android:textOn=""
                    android:thumb="@drawable/toggle_switch_thumb"
                    android:track="@drawable/toggle_switch_track" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:background="@android:color/white"/>
            <LinearLayout
                android:id="@+id/openSourceLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/settings_item_height"
                android:layout_below="@+id/voice_prompt_layout">

                <TextView
                    android:id="@+id/text_true_note"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/auto_feature_layout"
                    android:paddingRight="@dimen/settings_item_padding_right"
                    android:drawableRight="@mipmap/settings_arrow"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/settings_item_padding_left"
                    android:text="@string/true_note"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textSize="@dimen/abc_text_size_medium_material" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:background="@android:color/white"/>
            <LinearLayout
                android:id="@+id/eulaLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/settings_item_height"
                android:layout_below="@+id/openSourceLinearLayout"
                android:layout_marginTop="1dp">

                <TextView
                    android:id="@+id/settings_user_manual"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/auto_feature_layout"
                    android:paddingRight="@dimen/settings_item_padding_right"
                    android:drawableRight="@mipmap/settings_arrow"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/settings_item_padding_left"
                    android:text="@string/user_manual"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textSize="@dimen/abc_text_size_medium_material" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:background="@android:color/white"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:background="@android:color/white"/>
            <TextView
                android:id="@+id/text_firmware"
                android:layout_width="match_parent"
                android:layout_height="@dimen/settings_item_height"
                android:layout_marginTop="@dimen/margin5dp"
                android:gravity="start|center_vertical"
                android:paddingLeft="@dimen/settings_item_padding_left"
                android:paddingRight="@dimen/settings_item_padding_right"
                android:text="@string/firmware"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:drawableRight="@mipmap/settings_arrow"
                android:textSize="18sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:background="@android:color/white"/>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/linearLayoutVersion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin5dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/appVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
    </LinearLayout>

</RelativeLayout>