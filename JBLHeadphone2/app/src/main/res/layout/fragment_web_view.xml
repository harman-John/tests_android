<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/page_background"
    android:clickable="true"
    android:focusable="true">


    <RelativeLayout
        android:id="@+id/relative_layout_web_view_title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:paddingLeft="@dimen/margin_top_10dp"
        android:paddingRight="@dimen/margin_top_10dp">

        <ImageView
            android:id="@+id/image_view_web_view_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:background="@mipmap/black_arrow_back" />

    </RelativeLayout>

    <WebView
        android:id="@+id/web_view_how_to_pair"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/relative_layout_web_view_title_bar" />
</RelativeLayout>