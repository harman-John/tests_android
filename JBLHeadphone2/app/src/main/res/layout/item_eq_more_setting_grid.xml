<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_eqname"
    android:layout_width="110dp"
    android:layout_height="110dp"
    android:layout_gravity="center_horizontal"
    >

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="@drawable/shape_circle_eq_name_bg_normal"
        android:layout_centerInParent="true"
        />
    <ImageView
        android:id="@+id/image_view_select"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="@drawable/drag_bubble"
        android:layout_centerInParent="true"
        android:visibility="gone"
        />
    <jbl.stc.com.view.CustomFontTextView
        android:id="@+id/tv_eqname"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:text="@string/bass"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/eq_panel_name_text"
        android:gravity="center"
        android:layout_centerInParent="true"
         />
</RelativeLayout>