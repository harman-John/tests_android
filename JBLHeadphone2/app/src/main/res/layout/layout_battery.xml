<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:gravity="center">

    <ImageView
        android:id="@+id/batteryChargeImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dp"
        android:src="@mipmap/ic_charge" />

    <ProgressBar
        android:id="@+id/batteryProgressBar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="55dp"
        android:layout_height="4dp"
        android:max="100"
        android:maxHeight="4dp"
        android:minHeight="4dp"
        android:progress="0"
        android:progressDrawable="@drawable/horizontal_progress_not_charge" />

    <jbl.stc.com.view.PoppinsRegularTextView
        android:id="@+id/batteryLevelText"
        style="@style/PoppinsRegularTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:text="0%"
        android:textColor="@android:color/black"
        android:textSize="11dp" />
</LinearLayout>