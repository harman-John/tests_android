<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_round_corner"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            >
            <jbl.stc.com.view.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/turn_on_bluetooth_still_see"
                android:textColor="@color/smart_audio_popup_text_color1"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/aa_popup_close_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_arrow_down"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:tint="@color/black"/>

        </RelativeLayout>



        <jbl.stc.com.view.CustomFontTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:layout_marginTop="20dp"
            android:text="@string/turn_on_bluetooth_still_see_detail"
            android:textColor="@color/smart_audio_popup_text_color1"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/button_go_to_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/go_to_bluetooth"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="15dp"
            android:textSize="18sp"
            android:textColor="@color/orange"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:background="@drawable/rectangle_with_round_corner_orange"/>

    </LinearLayout>

</RelativeLayout>
