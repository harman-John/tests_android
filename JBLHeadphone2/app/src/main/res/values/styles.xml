<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="calibration" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">@color/background</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/background</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/background</item>
    </style>

    <style name="PoppinsRegularTextStyle">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/text_white_80</item>
        <item name="android:lineSpacingExtra">0dp</item>
    </style>

    <style name="AppDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="style_down_to_top" parent="Animation.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/enter_from_down</item>
        <item name="android:windowExitAnimation">@anim/exit_to_down</item>
    </style>

    <style name="PoppinsMediumTextStyle">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:lineSpacingExtra">-3dp</item>
    </style>

    <style name="ButtonTextStyle">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/main_color</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:clickable">true</item>
        <item name="android:minWidth">100dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:background">@drawable/selector_app_button_background</item>
    </style>
    <style name="CustomCheckboxTheme" parent="@android:style/Widget.Holo.CheckedTextView">
        <item name="android:button">@drawable/checkbox_selector</item>
        <item name="android:scaleX">0.5</item>
        <item name="android:scaleY">0.5
        </item>
    </style>
    <style name="DialogAnimation">
        <item name="android:windowExitAnimation">@anim/fadeout</item>
    </style>
</resources>
