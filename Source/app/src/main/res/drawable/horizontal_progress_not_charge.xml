<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background" >
        <shape>
            <corners android:radius="4dp" />
            <gradient
                android:endColor="@color/horizontal_progress_bg"
                android:startColor="@color/horizontal_progress_bg" />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="4dp" />
                <gradient
                    android:endColor="@color/horizontal_progress_color_not_charge"
                    android:startColor="@color/horizontal_progress_color_not_charge" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="4dp" />
                <gradient
                    android:endColor="@color/horizontal_progress_color_not_charge"
                    android:startColor="@color/horizontal_progress_color_not_charge" />
            </shape>
        </clip>
    </item>
</layer-list>